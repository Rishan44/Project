<%- include('../partials/head.ejs') %>
<style>
    small.error{
        color: red;
    }
</style>
<%- include('../partials/userHeader.ejs') %>
<%- include('../partials/userBreadcrub.ejs') %>

    <!-- Add Address Section Begin -->
    <section class="checkout spad" style="padding-bottom: 256px;">
        <div class="container" style="padding-block-start: 228px;">
            <div class="checkout__form">
                <form action="/profile/editAddress/<%= address._id %>?returnPage=<%= returnPage %>" method="post" class="form-outline">
                    <div class="row d-flex justify-content-center">
                        <div class="d-flex flex-column col-lg-8 col-md-6">
                            <h4 class="checkout__title">Enter Details</h4>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>Name<span>*</span></p>
                                        <input type="text" id="name" class="form-control" placeholder="Enter name" name="name" value="<%= address.userName %>" style="position: relative; bottom: 11px;" required/>
                                        <small id="nameErr" class="error"></small>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        <input type="email" id="email" class="form-control" placeholder="Email" name="email" value="<%= address.email %>" style="position: relative; bottom: 11px;" required/>
                                        <small id="emailErr" class="error"></small>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Mobile<span>*</span></p>
                                        <input type="tel" id="mobile" class="form-control" placeholder="Mobile No." name="mobile" value="<%= address.mobile %>" style="position: relative; bottom: 11px;" required/>
                                        <small id="mobileErr" class="error"></small>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Town/City<span>*</span></p>
                                        <input type="text" id="town" class="form-control" placeholder="Town" name="town" value="<%= address.town %>" style="position: relative; bottom: 11px;" required/>
                                        <small id="townErr" class="error"></small>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>State<span>*</span></p>
                                        <input type="text" id="state" class="form-control" placeholder="State" name="state" value="<%= address.state %>" style="position: relative; bottom: 11px;" required/>
                                        <small id="stateErr" class="error"></small>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Country<span>*</span></p>
                                        <input type="text" id="country" class="form-control" placeholder="Country" name="country" value="<%= address.country %>"  style="position: relative; bottom: 11px;" required/>
                                        <small id="countryErr" class="error"></small>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>ZIP/Post Code<span>*</span></p>
                                        <input type="number" id="zip" class="form-control" placeholder="Enter ZIP Code" name="zip" value="<%= address.zip %>" style="position: relative; bottom: 11px;" required/>
                                        <small id="zipErr" class="error"></small>
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Address<span>*</span></p>
                                <input type="text" id="address" name="address" placeholder="Street Address" class="checkout__input__add form-control" value="<%= address.address %>"  style="position: relative; bottom: 11px;" required>
                                <small id="addressErr" class="error"></small>
                            </div>
                            <button  type="submit" class="btn btn-dark rounded-pill text-center" style="bottom: -19px; position: relative;">UPDATE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- Add Address Section End -->

    <script src="/validations/addressValidation.js"></script>
    

<%- include('../partials/script.ejs') %>
<%- include('../partials/footer.ejs') %>
